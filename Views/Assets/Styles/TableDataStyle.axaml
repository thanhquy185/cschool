<Styles xmlns="https://github.com/avaloniaui" xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
  <!--  Table Data Style  -->
  <!--  Warper  -->
  <Style Selector="Border.TableDataWarper">
    <Setter Property="Margin" Value="0,8,0,0" />
    <Setter Property="Background" Value="Transparent" />
    <Setter Property="CornerRadius" Value="8" />
    <Setter Property="BoxShadow" Value="0 2 6 #00000020" />
  </Style>

  <!--  Table  -->
  <Style Selector="DataGrid.TableData">
    <Setter Property="GridLinesVisibility" Value="None" />
    <Setter Property="IsReadOnly" Value="True" />
    <Setter Property="RowBackground" Value="White" />
    <Setter Property="BorderBrush" Value="Transparent" />
    <Setter Property="BorderThickness" Value="0" />
    <Setter Property="Foreground" Value="#333" />
    <Setter Property="FontSize" Value="14" />
    <Setter Property="CornerRadius" Value="8" />
  </Style>

  <!--  Header  -->
  <Style Selector="DataGrid.TableData DataGridColumnHeader">
    <Setter Property="HorizontalAlignment" Value="Stretch" />
    <Setter Property="VerticalAlignment" Value="Center" />
    <Setter Property="HorizontalContentAlignment" Value="Center" />
    <Setter Property="VerticalContentAlignment" Value="Center" />
    <Setter Property="Height" Value="50" />
    <Setter Property="Background" Value="#F2F2F2" />
    <Setter Property="Padding" Value="0" />
    <Setter Property="BorderThickness" Value="0" />
    <Setter Property="BorderBrush" Value="Transparent" />
    <Setter Property="Foreground" Value="#555" />
    <Setter Property="FontSize" Value="14" />
    <Setter Property="FontWeight" Value="Bold" />
    <Setter Property="CornerRadius" Value="8,8,0,0" />
  </Style>

  <!--  Row  -->
  <Style Selector="DataGrid.TableData DataGridRow">
    <Setter Property="Height" Value="50" />
    <Setter Property="Background" Value="White" />
    <Setter Property="BorderBrush" Value="#E2E2E2" />
    <Setter Property="BorderThickness" Value="0 0 0 1" />
    <Setter Property="Margin" Value="0" />
    <Setter Property="Foreground" Value="#333" />
    <Setter Property="FontSize" Value="14" />
    <Setter Property="FontWeight" Value="Normal" />
  </Style>

  <!--  Row hover  -->
  <Style Selector="DataGrid.TableData DataGridRow:pointerover">
    <Setter Property="Background" Value="#F1F5F9" />
  </Style>

  <!--  Row selected  -->
  <Style Selector="DataGrid.TableData DataGridRow:selected">
    <Setter Property="Background" Value="#E3F2FD" />
    <Setter Property="Foreground" Value="#4f8fefff" />
    <Setter Property="FontWeight" Value="SemiBold" />
  </Style>

  <!--  Cell  -->
  <Style Selector="DataGrid.TableData DataGridCell">
    <Setter Property="HorizontalContentAlignment" Value="Center" />
    <Setter Property="VerticalContentAlignment" Value="Center" />
    <Setter Property="Background" Value="Transparent" />
    <Setter Property="Padding" Value="4,0" />
    <Setter Property="BorderBrush" Value="Transparent" />
    <Setter Property="BorderThickness" Value="0" />
    <Setter Property="Foreground" Value="#333" />
    <Setter Property="FontSize" Value="14" />
  </Style>

  <!--  Cell trong Row được chọn  -->
  <Style Selector="DataGrid.TableData DataGridCell:selected">
    <Setter Property="BorderBrush" Value="Transparent" />
    <Setter Property="BorderThickness" Value="0" />
  </Style>

  <!--  Row nếu có hình ảnh  -->
  <Style Selector="DataGrid.TableData DataGridRow Border.HasImage">
    <Setter Property="Width" Value="36" />
    <Setter Property="Height" Value="36" />
    <Setter Property="ClipToBounds" Value="True" />
  </Style>
  <Style Selector="DataGrid.TableData.User DataGridRow Image">
    <Setter Property="Width" Value="36" />
    <Setter Property="Height" Value="36" />
    <Setter Property="Stretch" Value="UniformToFill" />
  </Style>
  <!--  Có hình ảnh là đối tượng: người dùng (User)  -->
  <Style Selector="DataGrid.TableData.User DataGridRow Border.HasImage">
    <Setter Property="CornerRadius" Value="18" />
  </Style>

  <!--  Cell có cột là Status  -->
  <Style Selector="DataGrid.TableData DataGridCell Border.Status">
    <Setter Property="Padding" Value="6,4" />
    <Setter Property="CornerRadius" Value="4" />
  </Style>
  <Style Selector="DataGrid.TableData DataGridCell Border.Status TextBlock">
    <Setter Property="Foreground" Value="White" />
    <Setter Property="FontSize" Value="12" />
    <Setter Property="FontWeight" Value="SemiBold" />
  </Style>
</Styles>
