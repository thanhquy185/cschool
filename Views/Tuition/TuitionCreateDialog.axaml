<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:vm="using:cschool.ViewModels"
        xmlns:models="using:cschool.Models"
        mc:Ignorable="d" 
        d:DesignWidth="800" d:DesignHeight="500"
        x:Class="cschool.Views.Tuition.TuitionCreateDialog"
        x:DataType="vm:TuitionViewModel"
        Title="Thiết lập học phí">

  <Design.DataContext>
    <vm:TuitionViewModel />
  </Design.DataContext>

  <Grid RowDefinitions="Auto,*,Auto" Margin="10" RowSpacing="10">

    <!-- Header -->
    <TextBlock Text="Thiết lập học phí cho lớp" FontSize="18" FontWeight="Bold"/>

    <!-- Body: DataGrid danh sách phí -->
<DataGrid Grid.Row="1"
          x:Name="FeeDataGrid"
          AutoGenerateColumns="False"
          Margin="0,0,0,10"
          ItemsSource="{Binding FeeTemplateList}"
           IsReadOnly="True" >

    <DataGrid.Columns>
        <DataGridTextColumn Header="Tên phí" Binding="{Binding Name}" IsReadOnly="False" Width="2*"/>
        <DataGridTextColumn Header="Loại phí" Binding="{Binding Type}" IsReadOnly="False" Width="*"/>
        <DataGridTextColumn Header="Số tiền" Binding="{Binding Amount}" IsReadOnly="False" Width="*"/>

        <DataGridTemplateColumn Header="Hành động" Width="150">
            <DataGridTemplateColumn.CellTemplate>
                <DataTemplate>
                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                        <Button Content="Sửa" Margin="5,0" Click="EditFee_Click"/>
                        <Button Content="Xóa" Margin="5,0" Click="DeleteFee_Click"/>
                    </StackPanel>
                </DataTemplate>
            </DataGridTemplateColumn.CellTemplate>
        </DataGridTemplateColumn>
    </DataGrid.Columns>
</DataGrid>


    <!-- Footer: Thêm phí mới -->
    <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Left" Spacing="10">
      <TextBox x:Name="NewFeeName" Width="150" Watermark="Tên phí"/>
      <ComboBox x:Name="NewFeeType" Width="100">
        <ComboBoxItem Content="BASE"/>
        <ComboBoxItem Content="CUSTOM"/>
      </ComboBox>
      <TextBox x:Name="NewFeeAmount" Width="100" Watermark="Số tiền"/>
      <Button Content="Thêm" Width="80" Click="AddFee_Click"/>

      <!-- Nút Lưu/Đóng -->
      <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Margin="20,0,0,0">
        <Button Content="Lưu" Width="100" Click="Save_Click"/>
        <Button Content="Đóng" Width="100" Click="Close_Click" Margin="10,0,0,0"/>
      </StackPanel>
    </StackPanel>

  </Grid>
</Window>
