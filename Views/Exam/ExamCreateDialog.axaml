                        </ComboBox.ItemTemplate>
                    </ComboBox>

                    <!-- M√¥n h·ªçc -->
                    <TextBlock Grid.Row="3" Grid.Column="0" Text="M√¥n h·ªçc" FontSize="15" FontWeight="Bold" Margin="0,10,0,5" Foreground="Black"/>
                    <ComboBox  Grid.Row="4" Grid.Column="0" x:Name="Subject" MaxDropDownHeight="300"  Margin="0,0,0,10"
                                ItemsSource="{Binding SubjectList}" PlaceholderText="--- Ch·ªçn m√¥n h·ªçc ---" Width="200">
                        <ComboBox.ItemTemplate>
                            <DataTemplate>
                                <TextBlock Text="{Binding SubjectName}"/>
                            </DataTemplate>
                        </ComboBox.ItemTemplate>
                    </ComboBox>

                    <!-- Ng√†y thi -->
                    <TextBlock Grid.Row="3" Grid.Column="1" Text="Ng√†y thi" FontSize="15" FontWeight="Bold" Margin="10,10,0,5" Foreground="Black"/>
                    <DatePicker Grid.Row="4" Grid.Column="1" x:Name="ExamDate" Margin="10,0,0,10" BorderThickness="1" CornerRadius="4"/>

                    <!-- Gi·ªù b·∫Øt ƒë·∫ßu -->
                    <TextBlock Grid.Row="6" Grid.Column="0" Text="Gi·ªù b·∫Øt ƒë·∫ßu" FontSize="15" FontWeight="Bold" Margin="0,10,0,5" Foreground="Black"/>
                    <local:TimePicker Grid.Row="7" Grid.Column="0" x:Name="StartTime" Margin="0,0,0,10"/>

                    <!-- Gi·ªù k·∫øt th√∫c -->
                    <TextBlock Grid.Row="6" Grid.Column="1" Text="Gi·ªù k·∫øt th√∫c" FontSize="15" FontWeight="Bold" Margin="10,10,0,5" Foreground="Black"/>
                    <local:TimePicker Grid.Row="7" Grid.Column="1" x:Name="EndTime" Margin="10,0,0,10"/>

                    <!-- Ch·ªçn ph√≤ng thi + gi√°o vi√™n -->
                    <TextBlock Grid.Row="12" Grid.ColumnSpan="2" x:Name="RemainingStudents"
                                FontSize="15" FontWeight="Bold" Margin="0,20,0,5" Foreground="Red" HorizontalAlignment="Stretch"/>
                    <TextBlock Grid.Row="13" Grid.ColumnSpan="2" Text="Ph√¢n c√¥ng ph√≤ng thi v√† gi√°o vi√™n" FontSize="18" FontWeight="Bold" 
                                Margin="0,20,0,5" Foreground="Black" HorizontalAlignment="Stretch"/>
                    <Grid Grid.Row="14" Grid.ColumnSpan="2" Margin="0,10,0,10">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*" />
