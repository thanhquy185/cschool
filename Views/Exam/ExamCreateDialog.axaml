                    <!-- Kh·ªëi l·ªõp -->
                    <TextBlock Grid.Row="0" Grid.Column="0" Text="Kh·ªëi l·ªõp" FontSize="15" FontWeight="Bold" Margin="0,0,0,5" Foreground="Black"/>
                    <ComboBox  Grid.Row="1" Grid.Column="0" x:Name="Grade" SelectionChanged="OnGradeChanged" MaxDropDownHeight="300" 
                                SelectedIndex="0" Width="200" Margin="0,0,0,10">
                        <ComboBoxItem>--- Ch·ªçn Kh·ªëi l·ªõp ---</ComboBoxItem>
                        <ComboBoxItem Tag="10">Kh·ªëi 10</ComboBoxItem>
