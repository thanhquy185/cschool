                                    Width="200"
                                    MaxDropDownHeight="300">
                                <ComboBox.ItemTemplate>
                                    <DataTemplate>
                                        <TextBlock Text="{Binding RoomName}" />
                                    </DataTemplate>
                                </ComboBox.ItemTemplate>
                            </ComboBox>
                        </StackPanel>

                        <!-- Gi√°o vi√™n ph·ª• tr√°ch -->
