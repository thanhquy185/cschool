                                    Margin="0,0,0,5"
                                    Foreground="Black" />

                            <!-- H√†ng ngang ch·ª©a combobox v√† n√∫t -->
                            <StackPanel Orientation="Horizontal" Spacing="10">
                                <ComboBox x:Name="Teacher"
                                        ItemsSource="{Binding TeacherList}"
                                        PlaceholderText="--- Ch·ªçn gi√°o vi√™n ---"
                                        Width="200"
                                        MaxDropDownHeight="300">
                                    <ComboBox.ItemTemplate>
                                        <DataTemplate>
