                    <!-- H·ªçc k·ª≥ -->
                    <TextBlock Grid.Row="0" Grid.Column="1" Text="H·ªçc k·ª≥" FontSize="15" FontWeight="Bold" Margin="10,10,0,5" Foreground="Black"/>
                    <ComboBox  Grid.Row="1" Grid.Column="1" x:Name="Term" SelectionChanged="OnTermChanged" MaxDropDownHeight="300"  Margin="10,0,0,10"
                                ItemsSource="{Binding StudyTerm}" PlaceholderText="--- Ch·ªçn h·ªçc k·ª≥ ---" Width="200">
                        <ComboBox.ItemTemplate>
                            <DataTemplate>
                                <TextBlock Text="{Binding TermName}"/>
