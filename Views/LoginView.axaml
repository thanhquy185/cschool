<UserControl
    x:Class="Views.LoginView"
    xmlns="https://github.com/avaloniaui"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:vm="using:ViewModels"
    x:DataType="vm:LoginViewModel">
    <Border
        Width="420"
        Padding="30"
        HorizontalAlignment="Center"
        VerticalAlignment="Center"
        Background="White"
        CornerRadius="12">
        <StackPanel Spacing="20">
            <!--  Logo và tên  -->
            <StackPanel
                HorizontalAlignment="Center"
                VerticalAlignment="Center"
                Orientation="Horizontal">
                <Image
                    Width="70"
                    Height="70"
                    Source="avares://Views/Assets/Images/Others/school-logo.png" />
                <TextBlock
                    HorizontalAlignment="Center"
                    VerticalAlignment="Center"
                    FontSize="28"
                    FontWeight="Bold"
                    Foreground="#1F2937"
                    Text="CSchool" />
            </StackPanel>
            <!--  Tài khoản  -->
            <StackPanel Margin="0,0,0,10">
                <TextBlock FontSize="16" Text="Tài khoản" />
                <TextBox
                    Height="40"
                    Margin="0,8,0,2"
                    Padding="10"
                    Background="#FAFAFA"
                    BorderBrush="#D1D5DB"
                    BorderThickness="1"
                    CornerRadius="6"
                    FontSize="16"
                    Text="{Binding Username}"
                    Watermark="Nhập Tên tài khoản" />
                <TextBlock
                    HorizontalAlignment="Left"
                    FontSize="14"
                    Foreground="Red"
                    Text="{Binding ErrorUsername}"
                    TextWrapping="Wrap" />
            </StackPanel>
            <!--  Mật khẩu  -->
            <StackPanel Margin="0,0,0,10">
                <TextBlock FontSize="16" Text="Mật khẩu" />
                <TextBox
                    Height="40"
                    Margin="0,8,0,2"
                    Padding="10"
                    Background="#FAFAFA"
                    BorderBrush="#D1D5DB"
                    BorderThickness="1"
                    CornerRadius="6"
                    FontSize="16"
                    PasswordChar="*"
                    Text="{Binding Password}"
                    Watermark="Nhập Mật khẩu" />
                <TextBlock
                    HorizontalAlignment="Left"
                    FontSize="14"
                    Foreground="Red"
                    Text="{Binding ErrorPassword}"
                    TextWrapping="Wrap" />
            </StackPanel>
            <StackPanel>
                <!--  Button đăng nhập  -->
                <Button
                    Height="40"
                    HorizontalAlignment="Stretch"
                    HorizontalContentAlignment="Center"
                    VerticalContentAlignment="Center"
                    Background="#3B82F6"
                    Command="{Binding LoginCommand}"
                    Content="Đăng nhập"
                    CornerRadius="6"
                    Cursor="Hand"
                    FontSize="16"
                    FontWeight="SemiBold"
                    Foreground="White" />
                <!--  Optional: link quên mật khẩu  -->
                <TextBlock
                    Margin="0,4,0,0"
                    HorizontalAlignment="Right"
                    Cursor="Hand"
                    FontSize="14"
                    Foreground="#3B82F6"
                    Text="Quên mật khẩu?" />
            </StackPanel>
        </StackPanel>
    </Border>
</UserControl>
