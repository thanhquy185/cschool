<UserControl
    x:Class="cschool.Views.AssignTeacherView"
    xmlns="https://github.com/avaloniaui"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:vm="using:cschool.ViewModels"
    xmlns:model="using:cschool.Models"
    x:DataType="vm:AssignTeacherViewModel"
    xmlns:conv="clr-namespace:cschool.Utils"
    x:Name="Root">
    
    <Grid  Classes="MainLayout"  RowDefinitions="Auto,Auto,*,Auto">
        <!-- Header giống UserView -->
        <Grid Classes="MainLayoutHeader" ColumnDefinitions="*,Auto">
            <!-- Title And SubTitle -->
            <StackPanel Classes="MainLayoutHeaderInfo">
                <TextBlock Classes="Title" Text="Quản lý phân công" />
                <TextBlock Classes="SubTitle" Text="Quản lý phân công giảng dạy giáo viên" />
            </StackPanel>
            <!-- Buttons giống UserView -->
            
            <StackPanel Grid.Column="1" Classes="MainLayoutHeaderButtons">
                <Button Classes="CrudButton Info" >
          <Border BorderBrush="{Binding BorderBrush, RelativeSource={RelativeSource AncestorType=Button}}">
            <StackPanel>
              <Image Source="{DynamicResource InfoIcon}" />
              <TextBlock Foreground="{Binding Foreground, RelativeSource={RelativeSource AncestorType=Button}}" Text="Chi tiết" />
            </StackPanel>
          </Border>
        </Button>
                <Button Classes="CrudButton Create"
                        Click="OnAddButtonClick" >
                    <Border BorderBrush="{Binding BorderBrush, RelativeSource={RelativeSource AncestorType=Button}}">
                        <StackPanel>
                            <Image Source="{DynamicResource CreateIcon}" />
                            <TextBlock Foreground="{Binding Foreground, RelativeSource={RelativeSource AncestorType=Button}}" Text="Thêm" />
                        </StackPanel>
                    </Border>
                </Button>
                <Button Classes="CrudButton Update"
                        Click="OnEditButtonClick"
                CommandParameter="{Binding SelectedAssignTeacher}"
                IsEnabled="{Binding SelectedAssignTeacher, Converter={StaticResource NullToBoolConverter}}">
                    <Border BorderBrush="{Binding BorderBrush, RelativeSource={RelativeSource AncestorType=Button}}">
                        <StackPanel>
                            <Image Source="{DynamicResource UpdateIcon}" />
                            <TextBlock Foreground="{Binding Foreground, RelativeSource={RelativeSource AncestorType=Button}}" Text="Cập nhật" />
                        </StackPanel>
                    </Border>
                </Button>
                <Button Classes="CrudButton Lock" Command="{Binding Delete}"
                CommandParameter="{Binding SelectedAssignTeacher}"
                IsEnabled="{Binding SelectedAssignTeacher, Converter={StaticResource NullToBoolConverter}}">
                    <Border BorderBrush="{Binding BorderBrush, RelativeSource={RelativeSource AncestorType=Button}}">
                        <StackPanel>
                            <Image Source="{DynamicResource DeleteIcon}" />
                            <TextBlock Foreground="{Binding Foreground, RelativeSource={RelativeSource AncestorType=Button}}" Text="Xóa" />
                        </StackPanel>
                    </Border>
                </Button>
            </StackPanel>
        </Grid>

        <!-- Filter giống UserView -->
        <Border Grid.Row="1" Classes="FilterDataWarper">
            <Grid Classes="FilterData" RowDefinitions="*,Auto">
                <StackPanel Classes="FilterDataInputs">
                    <Grid Classes="FilterDataFindInput">
                        <TextBox Watermark="Nhập tên giáo viên, môn học hoặc lớp học" 
                                 Text="{Binding SearchText, Mode=TwoWay}"/>
                         <Button Grid.Column="1"
                            Command="{Binding SearchCommand}"
                            Classes="FilterDataSearchButton" 
                            Background="Transparent"
                            BorderBrush="Transparent"
                            BorderThickness="0"                   
                            ToolTip.Tip="Tìm kiếm">
                        <Image Source="{DynamicResource SearchIcon}" Width="20" Height="20"/>
                    </Button>
                   
                    </Grid>
                     <ComboBox ItemsSource="{Binding Subjects}" 
                              SelectedItem="{Binding SelectedSubjectSearch, Mode=TwoWay}" 
                              DisplayMemberBinding="{Binding Name}"
            
                              PlaceholderText="Chọn môn học"
                              Width = "150"
                              Height = "40"
                              SelectionChanged="SubjectCombo_SelectionChanged"/>
                </StackPanel>
                <Button
                    HorizontalAlignment="Right"
                    VerticalAlignment="Center"
                    Classes="FilterDataResetButton">
                    <Image Source="{DynamicResource ResetIcon}" />
                </Button>
            </Grid>
        </Border>

        <!-- Table giống UserView -->
        <Border Grid.Row="2" Classes="TableDataWarper">
            <DataGrid
                x:Name="AssignTeachersDataGrid"
                Classes="TableData AssignTeacher"
                ItemsSource="{Binding AssignTeachers}"
                SelectedItem="{Binding SelectedAssignTeacher, Mode=TwoWay}"
                IsReadOnly="True"
                AutoGenerateColumns="False"
               >
                <DataGrid.Columns>
                    <DataGridTextColumn
                        Width="1.0*"
                        Binding="{Binding ClassName}"
                        Header="Lớp học" />
                    <DataGridTextColumn
                        Width="1.0*"
                        Binding="{Binding RoomName}"
                        Header="Phòng" />
                    <DataGridTextColumn
                        Width="1.5*"
                        Binding="{Binding Teachers}"
                        Header="Giáo viên" />
                    <DataGridTextColumn
                        Width="1.0*"
                        Binding="{Binding CourseName}"
                        Header="Môn học" />
                    <DataGridTextColumn
                        Width="1.5*"
                        Binding="{Binding Day}"
                        Header="Thứ/Ngày" />
                    <DataGridTextColumn
                        Width="1.0*"
                        Binding="{Binding Start}"
                        Header="Tiết bắt đầu" />
                    <DataGridTextColumn
                        Width="1.0*"
                        Binding="{Binding End}"
                        Header="Tiết kết thúc" />
                    <DataGridTextColumn
                        Width="1.5*"
                        Binding="{Binding QuizCount}"
                        Header="Số bài kiểm tra" /> 
                    <DataGridTextColumn
                        Width="1.5*"
                        Binding="{Binding OralCount}"
                        Header="Số bài miệng" />
                    
                    <!-- <DataGridTemplateColumn Header="Thao tác" Width="120">
                        <DataGridTemplateColumn.CellTemplate>
                            <DataTemplate>
                                <StackPanel Orientation="Horizontal" Spacing="5">
                                    <Button Content="✏️" 
                                            ToolTip.Tip="Sửa"
                                            Command="{Binding DataContext.EditCommand, ElementName=Root}"
                                            CommandParameter="{Binding}" 
                                            Background="#07ff1cff" 
                                            Padding="8,2"/>
                                    <Button Content="🗑️" 
                                            ToolTip.Tip="Xóa"
                                            Command="{Binding DataContext.DeleteCommand, ElementName=Root}"
                                            CommandParameter="{Binding}" 
                                            Background="#d6291cff" 
                                            Foreground="White"
                                            Padding="8,2"/>
                                </StackPanel>
                            </DataTemplate>
                        </DataGridTemplateColumn.CellTemplate>
                    </DataGridTemplateColumn> -->
                        
                </DataGrid.Columns>
            </DataGrid>
        </Border>
   
    </Grid>
</UserControl>