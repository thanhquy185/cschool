<Styles xmlns="https://github.com/avaloniaui" xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
  <!--  Table Data Style  -->
  <!--  Warper  -->
  <Style Selector="Border.TableDataWarper">
    <Setter Property="Margin" Value="0,8,0,0" />
    <Setter Property="Background" Value="Transparent" />
    <Setter Property="CornerRadius" Value="8" />
    <Setter Property="BoxShadow" Value="0 2 6 #00000020" />
  </Style>

  <!--  Table  -->
  <Style Selector="DataGrid.TableData">
    <Setter Property="GridLinesVisibility" Value="None" />
    <Setter Property="IsReadOnly" Value="True" />
    <Setter Property="RowBackground" Value="White" />
    <Setter Property="BorderBrush" Value="Transparent" />
    <Setter Property="BorderThickness" Value="0" />
    <Setter Property="Foreground" Value="#333" />
    <Setter Property="FontSize" Value="14" />
    <Setter Property="CornerRadius" Value="8" />
  </Style>

  <!--  Header  -->
  <Style Selector="DataGrid.TableData DataGridColumnHeader">
    <Setter Property="HorizontalAlignment" Value="Stretch" />
    <Setter Property="VerticalAlignment" Value="Center" />
    <Setter Property="HorizontalContentAlignment" Value="Center" />
    <Setter Property="VerticalContentAlignment" Value="Center" />
    <Setter Property="Height" Value="40" />
    <Setter Property="Background" Value="#EFEFEF" />
    <Setter Property="Padding" Value="0" />
    <Setter Property="BorderThickness" Value="0" />
    <Setter Property="BorderBrush" Value="Transparent" />
    <Setter Property="Foreground" Value="#555" />
    <Setter Property="FontSize" Value="14" />
    <Setter Property="FontWeight" Value="Bold" />
  </Style>

  <!--  Row  -->
  <Style Selector="DataGrid.TableData DataGridRow">
    <Setter Property="Height" Value="40" />
    <Setter Property="Background" Value="White" />
    <Setter Property="BorderBrush" Value="#E2E2E2" />
    <Setter Property="BorderThickness" Value="0 0 0 1" />
    <Setter Property="Margin" Value="0" />
    <Setter Property="Foreground" Value="#333" />
    <Setter Property="FontSize" Value="14" />
    <Setter Property="FontWeight" Value="Normal" />
  </Style>

  <!--  Row hover  -->
  <Style Selector="DataGrid.TableData DataGridRow:pointerover">
    <Setter Property="Background" Value="#F1F5F9" />
  </Style>

  <!--  Row selected  -->
  <Style Selector="DataGrid.TableData DataGridRow:selected">
    <Setter Property="Background" Value="#E3F2FD" />
    <Setter Property="Foreground" Value="#0D47A1" />
    <Setter Property="FontWeight" Value="SemiBold" />
  </Style>

  <!--  Cell  -->
  <Style Selector="DataGrid.TableData DataGridCell">
    <Setter Property="Background" Value="Transparent" />
    <Setter Property="Padding" Value="4,0" />
    <Setter Property="BorderBrush" Value="Transparent" />
    <Setter Property="BorderThickness" Value="0" />
    <Setter Property="Foreground" Value="#333" />
    <Setter Property="FontSize" Value="14" />
  </Style>

  <!--  Cell trong Row được chọn  -->
  <Style Selector="DataGrid.TableData DataGridCell:selected">
    <Setter Property="BorderBrush" Value="Transparent" />
    <Setter Property="BorderThickness" Value="0" />
  </Style>
</Styles>
