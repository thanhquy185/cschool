<Styles xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    
    <!-- Summary Container -->
    <Style Selector="Border.SummaryContainer">
        <Setter Property="Background" Value="transparent"/>
        <Setter Property="BorderThickness" Value="0"/>
        <Setter Property="Padding" Value="0"/>
        <Setter Property="Margin" Value="12,8,12,8"/>
    </Style>
    
    <!-- Dashboard Cards với border đẹp -->
    <Style Selector="Border.DashboardCard">
        <Setter Property="Background" Value="#FFFFFF"/>
        <Setter Property="CornerRadius" Value="12"/>
        <Setter Property="Padding" Value="20"/>
        <Setter Property="BorderThickness" Value="1"/>
        <Setter Property="BorderBrush" Value="#E0E0E0"/>
        <!-- Hiệu ứng nâng cao với multiple borders -->
    </Style>
    
    <!-- Hover Effects đẹp -->
    <Style Selector="Border.DashboardCard:pointerover">
        <Setter Property="BorderThickness" Value="2"/>
        <Setter Property="BorderBrush" Value="#2196F3"/>
        <Setter Property="Background" Value="#F3F8FF"/>
    </Style>
    
    <!-- Icon Background -->
    <Style Selector="Border.DashboardIconBackground">
        <Setter Property="Width" Value="48"/>
        <Setter Property="Height" Value="48"/>
        <Setter Property="CornerRadius" Value="12"/>
        <Setter Property="Padding" Value="12"/>
        <Setter Property="Background" Value="rgba(255,255,255,0.2)"/>
    </Style>
    
    <!-- Labels -->
    <Style Selector="TextBlock.DashboardLabel">
        <Setter Property="FontSize" Value="15"/>
        <Setter Property="Foreground" Value="#666666"/>
        <Setter Property="Margin" Value="0"/>
        <Setter Property="FontWeight" Value="Bold"/>
    </Style>
    
    <!-- Values -->
    <Style Selector="TextBlock.DashboardValue">
        <Setter Property="FontSize" Value="24"/>
        <Setter Property="FontWeight" Value="Bold"/>
        <Setter Property="Foreground" Value="#333333"/>
        <Setter Property="Margin" Value="4,0,0,0"/>
    </Style>

</Styles>