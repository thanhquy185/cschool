<Styles xmlns="https://github.com/avaloniaui" xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <!--  Main Layout Style  -->
    <Style Selector="Grid.MainLayout">
        <Setter Property="Margin" Value="16,8" />
    </Style>

    <!--  Main Layout Header  -->
    <Style Selector="Grid.MainLayoutHeader">
        <Setter Property="Height" Value="80" />
        <Setter Property="Background" Value="Transparent" />
    </Style>

    <!--  Main Layout Header Info  -->
    <Style Selector="StackPanel.MainLayoutHeaderInfo">
        <Setter Property="Orientation" Value="Vertical" />
        <Setter Property="VerticalAlignment" Value="Center" />
    </Style>

    <Style Selector="StackPanel.MainLayoutHeaderInfo TextBlock.Title">
        <Setter Property="VerticalAlignment" Value="Center" />
        <Setter Property="FontSize" Value="28" />
        <Setter Property="FontWeight" Value="Bold" />
    </Style>

    <Style Selector="StackPanel.MainLayoutHeaderInfo TextBlock.SubTitle">
        <Setter Property="VerticalAlignment" Value="Center" />
        <Setter Property="Margin" Value="0,4,0,0" />
        <Setter Property="Foreground" Value="#666" />
        <Setter Property="FontSize" Value="20" />
    </Style>
    
    <!--  Main Layout Header Buttons  -->
    <Style Selector="StackPanel.MainLayoutHeaderButtons">
        <Setter Property="Orientation" Value="Horizontal" />
        <Setter Property="Spacing" Value="10" />
    </Style>
</Styles>
